{
    "name": "BitChat Linux Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--net=host",
        "--device=/dev/bus/usb"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylint"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt", // Add if you have a requirements.txt
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    }
}